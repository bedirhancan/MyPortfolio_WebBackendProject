@model List<MyPortfolio.DAL.Entities.Feature>


<section id="home" class="s-home page-hero target-section" data-parallax="scroll" data-image-src="https://i.hizliresim.com/6rr1vi1.jpg" data-natural-width=3000 data-natural-height=2000 data-position-y=center>

    <div class="overlay"></div>
    <div class="shadow-overlay"></div>

    @foreach(var item in Model)
    {
        <div class="home-content">

            <div class="row home-content__main">

                <h3>@item.Title</h3>

                <h1>
                    @item.Description
                </h1>

                <div class="home-content__buttons">
                    <a href="#works" class="smoothscroll btn btn--stroke">
                        Son Projelerim
                    </a>
                    <a href="#about" class="smoothscroll btn btn--stroke">
                        Hakkımda
                    </a>
                </div>

                <div class="home-content__scroll">
                    <a href="#about" class="scroll-link smoothscroll">
                        <span>Aşağı Kaydır</span>
                    </a>
                </div>

            </div>

        </div>

    }

  
    <ul class="home-social">
        <li>
            <a href="https://github.com/bedirhancan" target="_blank">
                <i class="im im-github" aria-hidden="true"></i>
                <span>GitHub</span>
            </a>
        </li>
        <li>
            <a href="https://twitter.com/bedocann8" target="_blank">
                <i class="im im-twitter" aria-hidden="true"></i>
                <span>Twitter</span>
            </a>
        </li>
        <li>
            <a href="https://www.instagram.com/bedocann8/" target="_blank">
                <i class="im im-instagram" aria-hidden="true"></i>
                <span>Instagram</span>
            </a>
        </li>
        <li>
            <a href="https://www.linkedin.com/in/bedirhancan" target="_blank">
                <i class="im im-linkedin" aria-hidden="true"></i>
                <span>LinkedIn</span>
            </a>
        </li>
        <li>
            <a href="https://vsco.co/bedocann8/gallery" target="_blank">
                <i class="im im-vsco" aria-hidden="true"></i>
                <span>VSCO</span>
            </a>
        </li>
    </ul>
    <!-- end home-social -->

</section> 
